<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:padding="10dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iconNotificationApp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/discussion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/inter_semi_bold"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/iconNotificationApp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bodyNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_regular"
        android:text=""

        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/iconNotificationApp"
        app:layout_constraintTop_toBottomOf="@+id/titleNotification" />

</androidx.constraintlayout.widget.ConstraintLayout>